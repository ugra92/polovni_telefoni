{% extends 'layout/master.html.twig' %}
{% block customStyle %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.theme.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.transitions.min.css">
{% endblock %}
{% block body %}
    <div class="row">
        <div class="card clearfix" id="filters-holder">
            <div class="col-md-3 form-label-field">
                <label>Izaberite brend</label>
                <select class="browser-default">
                    <option value="" disabled selected>Izaberite brend</option>
                    <option value="1">Option 1</option>
                    <option value="2">Option 2</option>
                    <option value="3">Option 3</option>
                </select>
            </div>
            <div class="col-md-3 form-label-field">
                <label>Izaberite model</label>
                <select class="browser-default">
                    <option value="" disabled selected>Izaberite model</option>
                    <option value="1">Option 1</option>
                    <option value="2">Option 2</option>
                    <option value="3">Option 3</option>
                </select>
            </div>
            <div class="col-md-3 form-label-field">
                <div class="row">
                    <div class="col-md-6 form-label-field form-group">
                        <label>Cena od</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="col-md-6 form-label-field form-group">
                        <label>Cena do</label>
                        <input type="text" class="form-control">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="row" id="main-section">
        <div class="col-md-9 products-holder">
            <div class="products-slider">
                <div class="owl-heading">
                    <h3>
                        Najnoviji
                    </h3>
                </div>
                <div class="owl-carousel owl-theme">
                    {% for i in 0..10 %}
                        <div class="item product-item">
                            <div class="card">
                                <div class="card-image">
                                    <i class="material-icons new">fiber_new</i>
                                    <img src="http://plazathemes.com/demo/boxstore/pub/media/catalog/product/cache/small_image/198x198/beff4985b56e3afdbeabfc89641a4582/7/-/7-7digital_2.jpg" alt="iRobot Roomba 651">
                                </div>
                                <div class="card-content">
                                    <h3><a href="/roboter/saugroboter/irobot-roomba-651/">Samsung s8</a></h3>
                                    <span class="price-used"><i class="used">Pera Peric</i></span>
                                </div>
                                <div class="card-action row">
                                    {#<span class="col-md-6 view-more-holder">#}
                                    {#<a href="#" class="button view-detail">Detaljnije</a>#}
                                    {#</span>#}
                                    <span class="col-md-6 price">
                                <span> 448.00 €</span>
                                        {#<span class="savemoney"><strike>449.00 €</strike></span>#}
                            </span>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-md-3 sidebar-banner">
            <div class="banner-box">
                <a href="#">
                    <img src="http://plazathemes.com/demo/boxstore/pub/media/wysiwyg/banner11.jpg" alt="">
                </a>
            </div>
        </div>
        <div class="col-md-12">
            <div class="banner-home banner-home3">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="banner-box"><a href="http://plazathemes.com/demo/boxstore/english1/computer.html/"><img src="http://plazathemes.com/demo/boxstore/pub/media/wysiwyg/banner16.jpg" alt=""></a></div>
                    </div>
                    <div class="col-sm-6">
                        <div class="banner-box"><a href="http://plazathemes.com/demo/boxstore/english1/computer.html/"><img src="http://plazathemes.com/demo/boxstore/pub/media/wysiwyg/banner17.jpg" alt=""></a></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block customScript %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.min.js" type="text/javascript"></script>
    <script>
        $('.owl-carousel').owlCarousel({
            items: 4,
            margin:15,
            loop:true,
            autoplay: true,
            autoplayHoverPause: true,
            pagination:false,
            navigation:true,
            navigationText: ['<i class="material-icons">chevron_left</i>', '<i class="material-icons">chevron_right</i>'],
            responsive:{
                0:{
                    items:1
                },
                600:{
                    items:3
                },
                1000:{
                    items:4
                }
            }
        })
    </script>
{% endblock %}
